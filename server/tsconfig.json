{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es2017",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "build",
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": ["**/*.ts"],
  "exclude": ["build", "node_modules"]
}
